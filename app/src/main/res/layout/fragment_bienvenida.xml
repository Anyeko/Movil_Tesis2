<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:gravity="center"
    tools:context=".ui.slideshow.SlideshowFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            tools:ignore="ExtraText">

            <!-- Imagen de Bienvenida -->
            <ImageView
                android:id="@+id/image_bienvenida"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/bienvenida" <!-- Asegúrate de tener esta imagen en la carpeta drawable -->/>

            <!-- Título de Bienvenida -->
            <TextView
                android:id="@+id/text_slideshow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="¡Bienvenidos!"
                android:textAlignment="center"
                android:textSize="40sp"
                android:textColor="@color/dark_orange" />

            <!-- Descripción -->
            <TextView
                android:id="@+id/text_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="¡Bienvenidos a nuestra aplicación móvil para la prevención de la depresión en adultos mayores!"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/dark_gray" />

            <!-- Título Identificate -->
            <TextView
                android:id="@+id/text_identificate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="IDENTIFICATE"
                android:textAlignment="center"
                android:textSize="40sp"
                android:textColor="@color/dark_orange" />

            <!-- Contenedor de Botones -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <!-- Botón Imagen 1 (Usuario Adulto Mayor) -->
                <ImageButton
                    android:id="@+id/btn_adulto_mayor"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/adulto_mayor" <!-- Asegúrate de tener esta imagen en la carpeta drawable -->/>

                <!-- Botón Imagen 2 (Profesional de Salud) -->
                <ImageButton
                    android:id="@+id/btn_profesional_salud"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/profesional_salud" <!-- Asegúrate de tener esta imagen en la carpeta drawable -->/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
